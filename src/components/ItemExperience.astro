---
interface Props{
    title:string
    place:string
    status:string
    description:string
}


const { title, place, description, status} = Astro.props;

---

<li class="mb-10 ms-4">
    <div class="absolute w-3 h-3 bg-yellow-400 rounded-full mt-1.5 -start-1.5 border border-white "></div>
    <div class="grid grid-cols-2">
        <div>
            <h3 class="text-xl font-bold text-yellow-400">{title}</h3>
            <p class="my-1 text-lg  leading-none text-white">{place}</p>
            <p class="my-2 text-sm  leading-none text-white opacity-80 ">{status}</p>     
        </div>
        <div>
            <p class="mb-4 text-base  text-white opacity-90 ">{description}</p>       
        </div>
    </div>
    

</li>