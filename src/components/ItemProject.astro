---
import IconAngular from './IconAngular.astro';
import IconWordPress from './IconWordPress.astro';

interface Props {
  img: string;
  title: string;
  description: string;
  frameworks: any;
}

const { img, title, description, frameworks } = Astro.props;
---

<article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0 mt-5">
  <div class="w-full md:w-1/2">
    <div
      class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50"
    >
      <img
        class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
        src={img}
        alt="Img"
      />
    </div>
  </div>
  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <ul class="flex flex-row mb-2 gap-x-2">
      <li>
        <span
          class=`flex gap-x-2 rounded-full text-xs ${frameworks[0].name === "Angular"? 'bg-red-500':'bg-purple-500' } text-white py-1 px-2`
        >
        {
          frameworks.map((framework:any) => (
            <div class="flex flex-row items-center gap-1">      
            {
              framework.name === "Angular" && <IconAngular></IconAngular>              
            }        
            {
              framework.name === "WordPress" && <IconWordPress></IconWordPress>
            }                 
              <span>{framework.name}</span>
            </div>
          ))
        }
        </span>
      </li>
    </ul>
    <p class="mt-2 text-gray-700 dark:text-gray-400">
      {description}
    </p>
