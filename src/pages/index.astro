---
import Badge from "../components/Badge.astro";

import Layout from "../layouts/Layout.astro";

import Skill from "../components/Skill.astro";
import Experience from "../components/Experience.astro";
import Project from "../components/Project.astro";
import AboutMe from "../components/AboutMe.astro";
---

<Layout title="Andres Murillo">
  <section
    class="py-16 md:py-24 scroll-m-20 w-full mx-auto container lg:max-w-4xl md:max-w-2xl"
  >
    <div class="max-w-xl">
      <div class="flex flex-row items-center gap-x-3">
        <img
          class="rounded-full w-16 h-16"
          src="data:image/jpeg;base64,"
          alt="fotoAndrew"
        />
        <Badge name="To a tope" />
      </div>

      <div class="mt-2">
        <h1
          class="text-white text-5xl font-bold flex justify-center flex-row gap-x-4"
        >
          Hey, soy Andrés Felipe Murillo
        </h1>
        <h2 class="opacity-80 mt-4 text-xl text-wrap">
          <span>+2 años de experiencia.</span>
          <span class="text-yellow-300">
            Ingeniero en Desarrollador de Software Full Stack.</span
          >
          <span class="text-red-200/90">De Medellín, Colombia</span>.
          <span class="opacity-85"
            >Especializado en crear aplicaciones únicas.
          </span>
        </h2>
      </div>

      <div class="flex flex-wrap items-center justify-start gap-3 mt-6">
        <Skill name="LinkeIn">
          <svg
            slot="icon"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-brand-linkedin"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M8 11v5"></path><path d="M8 8v.01"></path><path d="M12 16v-5"
            ></path><path d="M16 16v-3a2 2 0 1 0 -4 0"></path><path
              d="M3 7a4 4 0 0 1 4 -4h10a4 4 0 0 1 4 4v10a4 4 0 0 1 -4 4h-10a4 4 0 0 1 -4 -4z"
            ></path></svg
          >
        </Skill>

        <Skill name="GitHub">
          <svg
            slot="icon"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="icon icon-tabler icons-tabler-filled icon-tabler-brand-github"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M5.315 2.1c.791 -.113 1.9 .145 3.333 .966l.272 .161l.16 .1l.397 -.083a13.3 13.3 0 0 1 4.59 -.08l.456 .08l.396 .083l.161 -.1c1.385 -.84 2.487 -1.17 3.322 -1.148l.164 .008l.147 .017l.076 .014l.05 .011l.144 .047a1 1 0 0 1 .53 .514a5.2 5.2 0 0 1 .397 2.91l-.047 .267l-.046 .196l.123 .163c.574 .795 .93 1.728 1.03 2.707l.023 .295l.007 .272c0 3.855 -1.659 5.883 -4.644 6.68l-.245 .061l-.132 .029l.014 .161l.008 .157l.004 .365l-.002 .213l-.003 3.834a1 1 0 0 1 -.883 .993l-.117 .007h-6a1 1 0 0 1 -.993 -.883l-.007 -.117v-.734c-1.818 .26 -3.03 -.424 -4.11 -1.878l-.535 -.766c-.28 -.396 -.455 -.579 -.589 -.644l-.048 -.019a1 1 0 0 1 .564 -1.918c.642 .188 1.074 .568 1.57 1.239l.538 .769c.76 1.079 1.36 1.459 2.609 1.191l.001 -.678l-.018 -.168a5.03 5.03 0 0 1 -.021 -.824l.017 -.185l.019 -.12l-.108 -.024c-2.976 -.71 -4.703 -2.573 -4.875 -6.139l-.01 -.31l-.004 -.292a5.6 5.6 0 0 1 .908 -3.051l.152 -.222l.122 -.163l-.045 -.196a5.2 5.2 0 0 1 .145 -2.642l.1 -.282l.106 -.253a1 1 0 0 1 .529 -.514l.144 -.047l.154 -.03z"
            ></path></svg
          >
        </Skill>

        <Skill name="Angular">
          <svg
            slot="icon"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-brand-angular"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M5.428 17.245l6.076 3.471a1 1 0 0 0 .992 0l6.076 -3.471a1 1 0 0 0 .495 -.734l1.323 -9.704a1 1 0 0 0 -.658 -1.078l-7.4 -2.612a1 1 0 0 0 -.665 0l-7.399 2.613a1 1 0 0 0 -.658 1.078l1.323 9.704a1 1 0 0 0 .495 .734z"
            ></path><path d="M9 15l3 -8l3 8"></path><path d="M10 13h4"
            ></path></svg
          >
        </Skill>

        <Skill name="C#">
          <svg
            slot="icon"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-brand-c-sharp"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M10 9a3 3 0 0 0 -3 -3h-.5a3.5 3.5 0 0 0 -3.5 3.5v5a3.5 3.5 0 0 0 3.5 3.5h.5a3 3 0 0 0 3 -3"
            ></path><path d="M16 7l-1 10"></path><path d="M20 7l-1 10"
            ></path><path d="M14 10h7.5"></path><path d="M21 14h-7.5"
            ></path></svg
          >
        </Skill>

        <Skill name="Tailwind-CSS">
          <svg
            slot="icon"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-brand-tailwind"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M11.667 6c-2.49 0 -4.044 1.222 -4.667 3.667c.933 -1.223 2.023 -1.68 3.267 -1.375c.71 .174 1.217 .68 1.778 1.24c.916 .912 2 1.968 4.288 1.968c2.49 0 4.044 -1.222 4.667 -3.667c-.933 1.223 -2.023 1.68 -3.267 1.375c-.71 -.174 -1.217 -.68 -1.778 -1.24c-.916 -.912 -1.975 -1.968 -4.288 -1.968zm-4 6.5c-2.49 0 -4.044 1.222 -4.667 3.667c.933 -1.223 2.023 -1.68 3.267 -1.375c.71 .174 1.217 .68 1.778 1.24c.916 .912 1.975 1.968 4.288 1.968c2.49 0 4.044 -1.222 4.667 -3.667c-.933 1.223 -2.023 1.68 -3.267 1.375c-.71 -.174 -1.217 -.68 -1.778 -1.24c-.916 -.912 -1.975 -1.968 -4.288 -1.968z"
            ></path></svg
          >
        </Skill>

        <Skill name="Flutter">
          <svg
            slot="icon"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-brand-flutter"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M7 14l-3 -3l8 -8h6z"></path><path
              d="M14 21l-5 -5l5 -5h5l-5 5l5 5z"></path></svg
          >
        </Skill>

        <Skill name="SQL Server">
          <svg
            slot="icon"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="icon icon-tabler icons-tabler-outline icon-tabler-server"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M3 4m0 3a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v2a3 3 0 0 1 -3 3h-12a3 3 0 0 1 -3 -3z"
            ></path><path
              d="M3 12m0 3a3 3 0 0 1 3 -3h12a3 3 0 0 1 3 3v2a3 3 0 0 1 -3 3h-12a3 3 0 0 1 -3 -3z"
            ></path><path d="M7 8l0 .01"></path><path d="M7 16l0 .01"
            ></path></svg
          >
        </Skill>
      </div>
    </div>
  </section>

  <section class="py-16 md:py-24 scroll-m-20 w-full mx-auto container lg:max-w-4xl md:max-w-2xl">
    <Experience/>
  </section>

  <section class="py-2 md:py-2 scroll-m-20 w-full mx-auto container lg:max-w-4xl md:max-w-2xl">
    <Project/>
  </section>

  <section class="py-2 md:py-2 scroll-m-20 w-full mx-auto container lg:max-w-4xl md:max-w-2xl">
    <AboutMe/>
  </section>
</Layout>
