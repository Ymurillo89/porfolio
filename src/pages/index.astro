---
import Badge from "../components/Badge.astro";
import perfil from '../assets/img/perfil.png'; 
import Layout from "../layouts/Layout.astro";

import Skill from "../components/Skill.astro";
import Experience from "../components/Experience.astro";
import Project from "../components/Project.astro";
import AboutMe from "../components/AboutMe.astro";
---

<Layout title="Andres Murillo">
  <section class="py-16 md:py-24 scroll-m-20 w-full mx-auto container lg:max-w-4xl md:max-w-2xl" id="main">
    <div class="max-w-xl">
      <div class="flex flex-row items-center gap-x-3">
        <img
          class="rounded-full w-24 h-24"
          src={perfil.src}
          alt="fotoDesarrollador"
        />
        <Badge name="Preprado para programar" />
      </div>

      <div class="mt-2" >
        <h1
          class="text-white text-5xl font-bold flex justify-center flex-row gap-x-4"
        >
          Hey, soy Andrés Felipe Murillo
        </h1>
        <h2 class="opacity-80 mt-4 text-xl text-wrap">
          <span>+2 años de experiencia.</span>
          <span class="text-yellow-300">
            Ingeniero en Desarrollador de Software Full Stack.</span
          >
          <span class="text-red-200/90">De Medellín, Colombia</span>.
          <span class="opacity-85"
            >Especializado en crear aplicaciones únicas.
          </span>
        </h2>
      </div>

      <div class="flex flex-wrap items-center justify-start gap-3 mt-6">
        <Skill name="GitHub">
          <svg
            slot="icon"
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="currentColor"
            class="icon icon-tabler icons-tabler-filled icon-tabler-brand-github"
